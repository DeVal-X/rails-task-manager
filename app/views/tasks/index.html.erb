<h1>Tasks List</h1>

<ul><% @tasks.each do |task| %>
<li><%= link_to task.title, task_path(task) %>
<%= link_to '⚙️', edit_task_path(task) %>
<%= link_to '🗑️', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</li>
<% end %></ul>


<%= link_to '➕ Add a task', new_task_path %>
